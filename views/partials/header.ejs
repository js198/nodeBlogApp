  <body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/index">SCEPTECH</a>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-expand">
          <span class="glyphicon glyphicon-menu-hamburger"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="navbar-expand">
          <ul class="nav navbar-nav pull-right">
            <% if(!currentUser){ %>
            <li><a href="/about">About</a></li>
            <li><a href="/register">Register</a></li>
            <li><a href="/login">Login</a></li>
            <%  } else { %>
            <li><a href=""><div class="greetings"><strong>Hello <%=  currentUser.username %></div></strong></a></li>
            <% if(currentUser.username === "johnnygogo"){ %>
            <li><a href="/index/new">Create a new blog post</a></li>
            <% } %>
            <li><a href="/logout">Logout </a></li>
            <% } %>
          </ul>
      </div>
    </div>
  </nav>

<div class="container">
  <% if(success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible">
      <%= success %>
    </div>
  <% } %>
  <% if(error && error.length > 0) { %>
    <div class="alert alert-warning alert-dismissible">
      <%= error %>
    </div>
  <% } %>
</div>
